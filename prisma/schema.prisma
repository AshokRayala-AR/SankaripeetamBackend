generator client {
    provider = "prisma-client-js"
      seed = "node prisma/seed.js"

} 
datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model User{
    id Int @id @default(autoincrement())
    name String?
    email String @unique
    password String
    otp String?
    otpExpiry DateTime?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Activity {
    id Int @id  @default(autoincrement())
    title String
    description String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id Int  @id @default(autoincrement())
    name String
    price Float
    imageUrl String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}